@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center p-5">
                    <div class="mb-4">
                        <i class="bi bi-exclamation-triangle text-danger" style="font-size: 4rem;"></i>
                    </div>
                    
                    <h1 class="h2 text-danger mb-3">Oops! Something went wrong</h1>
                    <p class="text-muted mb-4">
                        We encountered an error while processing your request. Don't worry, our team has been notified.
                    </p>

                    @if (Model.ShowRequestId)
                    {
                        <div class="alert alert-info">
                            <strong>Request ID:</strong> <code>@Model.RequestId</code>
                        </div>
                    }

                    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                        <a asp-controller="JoggingTracks" asp-action="Index" class="btn btn-primary">
                            <i class="bi bi-house me-2"></i>Go Home
                        </a>
                        <button onclick="history.back()" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Go Back
                        </button>
                    </div>
                </div>
            </div>

            @if (Environment.GetEnvironmentVariable("ASPNETCORE_ENVIRONMENT") == "Development")
            {
                <div class="card mt-4 border-warning">
                    <div class="card-header bg-warning text-dark">
                        <h5 class="mb-0">
                            <i class="bi bi-code-slash me-2"></i>Development Mode
                        </h5>
                    </div>
                    <div class="card-body">
                        <p class="mb-2">
                            <strong>Note:</strong> This detailed error information is only shown in Development environment.
                        </p>
                        <p class="mb-0 small text-muted">
                            The Development environment shouldn't be enabled for deployed applications as it can expose sensitive information.
                        </p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
