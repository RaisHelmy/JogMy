@model JogMy.Features.Admin.ViewModels.AdminDashboardViewModel

@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="row mb-4">
    <div class="col-12">
        <h2>Admin Dashboard</h2>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-6">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h5 class="card-title">Total Tracks</h5>
                        <h2 class="mb-0">@Model.TotalTracks</h2>
                    </div>
                    <div class="align-self-center">
                        <i class="bi bi-map" style="font-size: 2rem;"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card bg-success text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h5 class="card-title">Total Users</h5>
                        <h2 class="mb-0">@Model.TotalUsers</h2>
                    </div>
                    <div class="align-self-center">
                        <i class="bi bi-person" style="font-size: 2rem;"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Recent Tracks</h5>
                <a asp-action="Tracks" class="btn btn-sm btn-primary">View All</a>
            </div>
            <div class="card-body">
                @if (Model.RecentTracks.Any())
                {
                    <div class="list-group list-group-flush">
                        @foreach (var track in Model.RecentTracks)
                        {
                            <div class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <strong>@track.Name</strong><br>
                                    <small class="text-muted">@track.Region - @track.Distance km</small>
                                </div>
                                <span class="badge bg-secondary">@track.CreatedAt.ToString("MMM dd")</span>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted">No tracks created yet.</p>
                }
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-action="CreateTrack" class="btn btn-primary">
                        <i class="bi bi-plus-circle me-2"></i>Create New Track
                    </a>
                    <a asp-action="Tracks" class="btn btn-outline-primary">
                        <i class="bi bi-list me-2"></i>Manage Tracks
                    </a>
                    <a asp-action="Users" class="btn btn-outline-secondary">
                        <i class="bi bi-people me-2"></i>Manage Users
                    </a>
                    <a asp-action="Terminal" class="btn btn-outline-dark">
                        <i class="bi bi-terminal me-2"></i>Admin Terminal
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>