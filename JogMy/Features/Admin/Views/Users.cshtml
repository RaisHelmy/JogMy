@model IEnumerable<JogMy.Features.Admin.ViewModels.UserRoleViewModel>

@{
    ViewData["Title"] = "Manage Users";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Manage Users</h2>
    <a asp-action="Dashboard" class="btn btn-outline-primary">
        <i class="bi bi-arrow-left me-2"></i>Back to Dashboard
    </a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>User</th>
                            <th>Email</th>
                            <th>Current Role</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var userRole in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@(userRole.User.FullName ?? "No Name")</strong>
                                    <br><small class="text-muted">ID: @userRole.User.Id</small>
                                </td>
                                <td>@userRole.User.Email</td>
                                <td>
                                    @if (userRole.Roles.Any())
                                    {
                                        @foreach (var role in userRole.Roles)
                                        {
                                            <span class="badge bg-@(role == "Admin" ? "danger" : "primary") me-1">@role</span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">No Role</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <button class="btn btn-sm btn-outline-primary dropdown-toggle" 
                                                type="button" 
                                                data-bs-toggle="dropdown">
                                            Assign Role
                                        </button>
                                        <ul class="dropdown-menu">
                                            <li>
                                                <form asp-action="AssignRole" method="post" class="d-inline">
                                                    <input type="hidden" name="userId" value="@userRole.User.Id" />
                                                    <input type="hidden" name="role" value="Admin" />
                                                    <button type="submit" class="dropdown-item @(userRole.Roles.Contains("Admin") ? "active" : "")">
                                                        <i class="bi bi-shield-check me-2"></i>Admin
                                                    </button>
                                                </form>
                                            </li>
                                            <li>
                                                <form asp-action="AssignRole" method="post" class="d-inline">
                                                    <input type="hidden" name="userId" value="@userRole.User.Id" />
                                                    <input type="hidden" name="role" value="Jogger" />
                                                    <button type="submit" class="dropdown-item @(userRole.Roles.Contains("Jogger") ? "active" : "")">
                                                        <i class="bi bi-person me-2"></i>Jogger
                                                    </button>
                                                </form>
                                            </li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-people" style="font-size: 3rem; color: #dee2e6;"></i>
                <h5 class="mt-3 text-muted">No users found</h5>
                <p class="text-muted">Users will appear here when they register.</p>
            </div>
        }
    </div>
</div>